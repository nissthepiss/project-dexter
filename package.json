{
  "name": "project-dexter",
  "version": "1.0.0",
  "description": "Real-time Solana token tracker for pump.fun tokens",
  "main": "src/main/index.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "server": "node src/backend/server.mjs",
    "build": "electron-builder",
    "build:win": "electron-builder --win --publish never",
    "postinstall": "if [ -z \"$DATABASE_URL\" ]; then npm run install-app-deps || true; else echo \"Skipping Electron deps for Railway deployment\"; fi",
"install-app-deps": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.dextertracker.app",
    "productName": "Project Dexter",
    "asar": false,
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Project Dexter"
    },
    "portable": {
      "artifactName": "${productName}-${version}.exe"
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "localtunnel": "^2.0.2",
    "pg": "^8.11.3",
    "sql.js": "^1.10.3",
    "telegram": "^2.26.22",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "27.0.0",
    "electron-builder": "24.6.4",
    "electron-rebuild": "^3.2.9",
    "puppeteer": "^24.35.0"
  },
  "author": "",
  "license": "MIT"
}
